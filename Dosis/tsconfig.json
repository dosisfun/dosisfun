{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": false,
    "lib": ["ES2015", "DOM", "ES2017"],
    "target": "ES2015",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
